<% include ../partials/header %>
<div class="container">
    <div class ="row"> 
      <div class="col-md-3">
          <p class="lead">YelpTravel</p>
          <div class="list-group">
              <li class="list-group-item">Info 1</li>
              <li class="list-group-item">Info 2</li>
              <li class="list-group-item">Info 3</li>
          </div>
      </div>
      <div class="col-md-9">
          <div class="thumbnail">
              <img class="img-responsive" src="<%= city.image %>">
              <div class="caption-full">
                  <h4 class="pull-right">Â£9.00/night</h4>
                  <h4><a> <%=city.name%></a></h4>
                  <p><%= city.description %></p>
                  <p>
                      <em>Submitted By <%= city.author.username %></em>
                      </p>
                          <% if(currentUser && city.author.id.equals(currentUser._id)){%>
                          <a class="btn btn-default" href="/cities/<%= city._id %>/edit">Edit</a>
                          <form id="DeleteForm" action="/cities/<%= city._id %>?_method=DELETE" method="POST">
                             <button class="btn btn-default">Delete</button>
                              
                          </form>
                   <% } %>
              </div>
          </div>
          <div class="well">
              <div class="text-right">
                  <a class="btn btn-success" href="/cities/<%= city._id %>/comments/new">Add new comment</a>
              </div>
              <hr>
              
              <% city.comments.forEach(function(comment){ %>
                  <div class="row">
                      <div class="col-md-12">
                          <strong><%= comment.author.username %></strong>
                          <span class="pull-right">10 days ago</span>
                           <p>
                              <%= comment.text %>
                           </p>
                           <% if(currentUser && comment.author.id.equals(currentUser._id)){%>
                           <a class="btn btn-xl btn-warning"
                           href="/cities/<%= city._id %>/comments/<%=comment._id %>/edit">
                               Edit
                           </a>
                           
                           <form id="DeleteForm" action="/cities/<%= city._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                             <button class="btn btn-default">Delete</button>
                             <% } %>
                      </div>
                  </div>
            
          <% }) %>

          </div>
      </div>
    </div>
    
</div>









